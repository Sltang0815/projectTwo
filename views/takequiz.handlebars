{{> navbar user}}
{{#each questions}}
<div class="card">
    <div class="card-body">
        {{this.title}}
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="answerOne" id="exampleRadios1" value="option1">
        <label class="form-check-label" for="exampleRadios1">
            {{this.answerOne}}
        </label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="answerTwo" id="exampleRadios1" value="option2">
        <label class="form-check-label" for="exampleRadios1">
            {{this.answerTwo}}
        </label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="answerThree" id="exampleRadios1" value="option2">
        <label class="form-check-label" for="exampleRadios1">
            {{this.answerThree}}
        </label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="answerFour" id="exampleRadios1" value="option4">
        <label class="form-check-label" for="exampleRadios1">
            {{this.answerFour}}
        </label>
    </div>
</div>
</div>



{{/each}}


